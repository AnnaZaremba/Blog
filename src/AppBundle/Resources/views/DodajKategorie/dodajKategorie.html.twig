{% extends 'index.html.twig' %}
{% block container %}
    <div id="main">
        <div class="container">
            <div class="row">
                <div id="content" class="12u skel-cell-important">
                    <section>
                        <header>
                            <h2>Dodaj kategorię</h2>
                        </header>
                        <div>
                            {{ form_start(form, { 'attr': { 'novalidate': 'novalidate'}}) }}
                            <div>
                                <div class="form-group" id="formularz">
                                    <div>
                                        <label>Nazwa</label>
                                    </div>
                                    <div>
                                        {{ form_widget(form.nazwa, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div id="blad">
                                        {{ form_errors(form.nazwa) }}
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-default">Dodaj kategorię</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    {% include('tabelaKategorii.html.twig') %}
{% endblock %}