{% extends 'index.html.twig' %}
{% block container %}
    <div class="container">
        {% for wpis in wpisy %}
            <div class="row">
                <div class="col-md-8">
                    <h2>{{ wpis.temat }}</h2>
                </div>
                <div class="col-md-4">
                    <h4>{{ wpis.createat|date('Y-m-d H:i:s') }}</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4>{{ wpis.tresc|raw }}</h4>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}