{% extends 'index.html.twig' %}
{% block container %}
    {{ tinymce_init() }}
    <div class="col-lg-12" id="box_news">
        <h2>Dodaj wpis</h2>
        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate'}}) }}
        <div>
            <div>
                <div id="formularz">
                    <h3>Temat</h3>
                    {{ form_widget(form.temat, {'attr': {'class': 'form-control'}}) }}
                    <div id="blad">{{ form_errors(form.temat) }}</div>
                </div>
                <div id="formularz">
                    <h3>Treść</h3>
                    {{ form_widget(form.tresc, {'attr': {'class': 'form-control tinymce'}}) }}
                    <div id="blad">{{ form_errors(form.tresc) }}</div>
                </div>
                <div id="dodajWpisKategorie">
                    <h3>Kategorie</h3>
                    {{ form_widget(form.kategorie, {'attr': { 'class': 'form-control'}}) }}
                    <div id="blad">{{ form_errors(form.kategorie) }}</div>
                </div>
            </div>
            <div id="button">
                <h3>
                    <button type="submit" class="btn btn-default btn-sm">Dodaj wpis</button>
                </h3>
            </div>
            {{ form_end(form) }}
        </div>
        <div>
            {% include('tabelaWpisow.html.twig') %}
        </div>
    </div>
{% endblock %}
