{% extends 'index.html.twig' %}
{% block container %}
    <div id="box_news">
        <h2>Edytuj kategorię</h2>
        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate'}}) }}
        <div>
            <div id="formularz">
                <h3>Nazwa</h3>
                {{ form_widget(form.nazwa, {'attr': {'class': 'form-control'}}) }}
                <div id="blad">{{ form_errors(form.nazwa) }}</div>
            </div>
            <div id="button">
                <h3>
                    <button type="submit" class="btn btn-default btn-sm">Edytuj kategorię</button>
                </h3>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block bottomContainer %}
    <div class="row">
        <div class="col-lg-12">
            {% include('tabelaKategorii.html.twig') %}
        </div>
    </div>
{% endblock %}