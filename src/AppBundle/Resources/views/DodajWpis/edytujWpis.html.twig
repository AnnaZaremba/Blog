{% extends 'index.html.twig' %}
{% block container %}
    {{ tinymce_init() }}
    <div id="box_news">
        <h2>Edytuj wpis</h2>
        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate'}}) }}
        <div>
            <div id="formularz">
                <div>
                    <h4>Temat</h4>
                    {{ form_widget(form.temat, {'attr': {'class': 'form-control'}}) }}
                    <div id="blad">{{ form_errors(form.temat) }}</div>
                </div>
                <div>
                    <h4>Treść</h4>
                    {{ form_widget(form.tresc, {'attr': {'class': 'form-control tinymce'}}) }}
                    <div id="blad">{{ form_errors(form.tresc) }}</div>
                </div>
                <div>
                    <h4>Kategorie</h4>
                    {{ form_widget(form.kategorie, {'attr': { 'class': 'form-control'}}) }}
                    <div id="blad">{{ form_errors(form.kategorie) }}</div>
                </div>
            </div>
            <div id="button">
                <h3>
                    <button type="submit" class="btn btn-default btn-sm">Edytuj wpis</button>
                </h3>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block bottomContainer %}
    <div class="row">
        <div class="col-lg-12">
            {% include('tabelaWpisow.html.twig') %}
        </div>
    </div>
{% endblock %}
